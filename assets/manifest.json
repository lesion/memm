{
  "name": "memm",
  "version": "1.2.4",
  "manifest_version": 2,
  "description": "",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action":{
    "browser_style": true,
    "default_icon": { "16" : "img/offline.png", "40" : "img/memm.png" },
    "default_popup": "popup.html"
  },
  "omnibox": { "keyword" : "." },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "img/memm.png",
    "48": "img/memm.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+M"
      }
    }
  },
  "content_security_policy":"script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "identity",
    "storage",
    "tabs",
    "bookmarks"
  ]
}
