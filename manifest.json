{
  "name": "remotestorage bookmarks",
  "version": "1.0",
  "manifest_version": 2,
  "description": "bookmark pages to your remotestorage",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["remoteStorage-debug.js", "background.js"]
  },
  "permissions": [
    "tabs",
    "bookmarks",  
    "http://*/*",
    "https://*/*"
  ]
}
