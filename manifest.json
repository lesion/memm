{
  "name": "remotestorage bookmarks",
  "version": "1.0",
  "manifest_version": 2,
  "description": "",
  "browser_action":{
    "default_icon": { "16" : "dist/remoteStorage.png" },
    "default_popup": "dist/popup.html"
  },
  "omnibox": { "keyword" : "." },
  "background": {
    "scripts": ["dist/background.js"]
  },
  "icons": {
    "16": "icon.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "linux": "Ctrl+B",
        "default": "Ctrl+B"
      }
    }
  },
  "permissions": [
    "identity",
    "storage",
    "tabs",
    "bookmarks",  
    "http://*/*",
    "https://*/*"
  ]
}
