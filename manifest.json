{
  "name": "remotestorage bookmarks",
  "version": "1.0",
  "manifest_version": 2,
  "description": "bookmark pages to your remotestorage",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "dist/popup.html"
  },
  "omnibox": { "keyword" : "#" },
  "background": {
    "scripts": ["dist/background.js"]
  },
  "icons": {
    "16": "icon.png"
  },
  "commands": {
    "toggle-feature-foo": {
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      },
      "description": "Toggle feature foo",
      "global": true
    },
    "_execute_browser_action": {
      "suggested_key": {
        "linux": "Ctrl+B",
        "default": "Ctrl+B"
      }
    },
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "windows": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      }
    }
  },
  "permissions": [
    "identity",
    "storage",
    "tabs",
    "bookmarks",  
    "http://*/*",
    "https://*/*"
  ]
}
